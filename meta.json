{
  "prompts": {
    "name": {
      "type": "input",
      "message": "Project name"
    },
    "author": {
      "type": "input",
      "message": "Author name"
    },
    "description": {
      "type": "input",
      "message": "Project description"
    },
    "typescript": {
      "type": "confirm",
      "message": "Using TypeScript?"
    },
    "sass": {
      "type": "confirm",
      "message": "Using Sass for style?"
    },
    "less": {
      "type": "confirm",
      "message": "Using Less for style?"
    },
    "stylelint": {
      "type": "confirm",
      "message": "Using linter for style?"
    }
  },
  "template": "template",
  "filters": {
    ".eslintrc.js": "!typescript",
    "tslint.json": "typescript",
    "tsconfig.json": "typescript",
    "src/app.tsx": "typescript",
    "src/index.tsx": "typescript",
    "src/app.less": "less",
    "src/app.scss": "sass",
    ".stylelintrc": "stylelint"
  }
}