{
  "prompts": {
    "name": {
      "type": "input",
      "message": "Project name"
    },
    "author": {
      "type": "input",
      "message": "Author name"
    },
    "description": {
      "type": "input",
      "message": "Project description"
    },
    "typescript": {
      "type": "confirm",
      "message": "Using TypeScript?"
    },
    "precss": {
      "type": "confirm",
      "message": "Using css pre-processor?"
    },
    "preprocessor": {
      "type": "list",
      "message": "Please select a css pre-processor",
      "choices": ["sass", "less"]
    },
    "stylelint": {
      "type": "confirm",
      "message": "Using linter for style?"
    }
  },
  "template": "template",
  "filters": {
    ".eslintrc.js": "!typescript",
    "tslint.json": "typescript",
    "tsconfig.json": "typescript",
    "src/app.tsx": "typescript",
    "src/app.jsx": "!typescript",
    "src/index.tsx": "typescript",
    "src/index.jsx": "!typescript",
    "src/app.css": "!precss",
    "src/app.less": "precss && preprocessor === 'less'",
    "src/app.scss": "precss && preprocessor === 'sass'",
    ".stylelintrc": "stylelint"
  }
}